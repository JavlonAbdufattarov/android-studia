<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="counterTextColor">@color/colorPrimary</item>
        <item name="counterOverflowTextColor">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- Style for text views. -->
    <style name="TextHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- Style for input text. -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorOnSurface">@color/purple_200</item>
        <item name="colorOnBackground">@color/white</item>
    </style>

    <!-- Style for checkboxes. -->
    <style name="CheckboxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
